<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center" android:orientation="vertical">

    <TextView
        android:id="@+id/item_timer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="과목 이름"
        android:textSize="20dp"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_timer_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="90sp"/>

        <TextView
            android:id="@+id/item_timer_ex"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="90sp"/>

        <TextView
            android:id="@+id/item_timer_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="90sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_timer_play"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_play_circle_outline_black_24dp"/>

        <ImageView
            android:id="@+id/item_timer_pause"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_pause_circle_outline_black_24dp"/>

        <ImageView
            android:id="@+id/item_timer_stop"
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_stop_black_24dp"/>

        <ImageView
            android:id="@+id/item_timer_fast"
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_fast_forward_black_24dp"/>

    </LinearLayout>

</LinearLayout>